@model QLDuAn.Web.Infastructure.Core.Paginnation<QLDuAn.Web.Models.ThongBaoViewModel>
@{
    ViewBag.Title = "chương trình quản lý dự án";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

    <h3 class="page-title">
        Thông Báo
    </h3>
    @if (ViewBag.AlNowVB != null)
    {
        <div class="Metronic-alerts alert alert-success">
            @foreach (var item in ViewBag.AlNowVB)
            {
                var url = "/thong-bao/chi-tiet-" + @item.Id + ".html";
                <p>
                    <a href="@url"><i class="fa fa-bell-o" aria-hidden="true"></i> @item.TieuDe</a>
                </p>
            }
        </div>
    }
 
    @{
        if (Model.items.Count() > 0)
        {
            foreach (var item in Model.items)
            {
                var url = "/thong-bao/chi-tiet-" + @item.Id + ".html";
                <div class="notice notice-sm">
                    <a href="@url"><i class="fa fa-angle-double-right" aria-hidden="true"></i> @item.TieuDe</a>
                </div>
            }



            if (Model.TotalPage > 1)
            {
                var startPage = Math.Max(1, Model.Page - Model.MaxPage / 2);
                var endPage = Math.Min(Model.TotalPage, Model.Page + Model.MaxPage / 2);
                <ul class="pull-right pagination pagination-sm">
                    @if (Model.Page > 1)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=1">Trang đầu </a>
                        </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=@(Model.Page-1)"> < </a>
                            </li>

                    }

                    @for (int i = startPage; i < endPage; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li class="page-item active">
                                <a class="page-link" href="?page=@i">@i</a>
                            </li>
                        }
                        else
                        {
                            <li class="page-item"><a class="page-link" href="?page=@i">@i</a></li>

                        }
                    }
                    @if (Model.Page < Model.TotalPage)
                    {
                        <li class="page-item">
                            <a class="page-link" href="?page=@(Model.Page + 1)" aria-label="Next"> > </a>
                        </li>
                            <li class="page-item">
                                <a class="page-link" href="?page=@Model.TotalPage" aria-label="Next"> Trang cuối </a>
                            </li>
                    }

                </ul>

            }

        }
        else
        {
            <p> Không có thông báo nào</p>
        }

    }

@section Calender{
    <div class="col-xs-12 bottom-border">
        <h4 style="font-weight: bold">Lịch</h4>
      
    </div>

        <div id="datepicker-inline"></div>

}

